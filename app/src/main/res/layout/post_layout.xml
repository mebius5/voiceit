<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angel"
        android:id="@+id/textViewPostUsername"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="League of legends is a joke and heres why"
        android:id="@+id/textViewPostDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textViewPostUsername"
        android:layout_toEndOf="@+id/textViewPostUsername"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageViewPostPicture"
        android:layout_below="@+id/textViewPostDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/kanyeyeezus"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10m"
        android:id="@+id/textViewTimestamp"
        android:layout_alignBottom="@+id/imageViewPostPicture"
        android:layout_alignRight="@+id/textViewPostDescription"
        android:layout_alignEnd="@+id/textViewPostDescription"
        android:layout_marginRight="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewPostPicture"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPostPlay"
            android:src="@drawable/ic_action_play"
            android:layout_marginLeft="30dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPostLike"
            android:src="@drawable/ic_action_favorite"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10"
            android:id="@+id/textViewPostNumberLikes"
            android:layout_marginLeft="40dp"
            android:textSize="40sp"
            android:textColor="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageViewPostSettings"
            android:src="@drawable/ic_action_overflow"
            android:layout_marginLeft="40dp" />
    </LinearLayout>

</RelativeLayout>
