<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:background="@color/toolbarBg"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voiceit"
        android:id="@+id/title"
        android:layout_marginTop="41dp"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/usrname"
        android:hint="Email "
        android:inputType="textWebEmailAddress"
        android:singleLine="true"
        android:layout_marginTop="58dp"
        android:imeOptions="actionNext"
        android:layout_below="@+id/registerTitle"
        android:layout_centerHorizontal="true"
        android:background="#376a6a6a"
        android:padding="5dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwd"
        android:hint="Password"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:background="#376a6a6a"
        android:padding="5dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/usrname"
        android:layout_alignLeft="@+id/usrname"
        android:layout_alignStart="@+id/usrname" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginRight="50dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/register"
                android:src="@drawable/register"
                android:background="#00ffffff"
                android:layout_alignTop="@+id/imageButtonLogin"
                android:layout_toLeftOf="@+id/registerRegisterLabel"
                android:layout_toStartOf="@+id/registerRegisterLabel"
                android:tint="#ffffffff"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="register"
                android:id="@+id/rlabel"
                android:gravity="center_horizontal"
                android:textColor="#ffffffff"
                android:layout_below="@+id/imageButtonRegister"
                android:layout_toLeftOf="@+id/registerLoginLabel"
                android:layout_toStartOf="@+id/registerLoginLabel"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_marginLeft="50dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:src="@drawable/login"
                android:background="#00ffffff"
                android:tint="#ffffff"
                android:contentDescription="login"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="login"
                android:id="@+id/llabel"
                android:layout_below="@+id/imageButtonLogin"
                android:layout_alignLeft="@+id/imageButtonLogin"
                android:layout_alignStart="@+id/imageButtonLogin"
                android:layout_alignRight="@+id/imageButtonLogin"
                android:layout_alignEnd="@+id/imageButtonLogin"
                android:gravity="center_horizontal"
                android:textColor="#ffffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
